@model Class
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-7" style="margin-top:30px">
                <div class="card">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <h5 class="card-header-text">Create Classes</h5>
                        <div asp-validation-summary="ModelOnly" style="color:red; margin-left:10px"></div>
                    </div>
                    <div class="card-block">
                        <form class="row" method="post" enctype="multipart/form-data">

                            <div class="col-md-12">
                                <label asp-for="Name" class="form-control-label">Name</label>
                                <div class="input-group">
                                    <input asp-for="Name" class="form-control" placeholder="Name">
                                    <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                </div>
                                <span asp-validation-for="Name" style="color:red;"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label">Sections</label>
                                    <select multiple="" class="form-control multiple-select" name="sectionsId[]">
                                        @foreach (Section item in ViewBag.Sections)
                                        {
                                            if (Model.ClassSections.Any(x => x.SectionId == item.Id))
                                            {
                                                <option selected value="@item.Id">@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
