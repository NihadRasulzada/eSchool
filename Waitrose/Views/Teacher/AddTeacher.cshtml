@model AddTeacherVM
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">
                        <form class="row" method="post" enctype="multipart/form-data">
                            <div class="col-lg-6">
                                <div class="col-md-12">
                                    <label asp-for="FullName" class="form-control-label">FullName</label>
                                    <div class="input-group">
                                        <input asp-for="FullName" class="form-control" placeholder="FullName">
                                        <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    </div>
                                    <span asp-validation-for="FullName" style="color:red; margin-left:12px"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Username" class="form-control-label">Username</label>
                                    <div class="input-group">
                                        <input asp-for=Username class="form-control" placeholder="Username">
                                        <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    </div>
                                    <span asp-validation-for="Username" style="color:red;margin-left:12px"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email" class="form-control-label">Email address</label>
                                    <div class="input-group">
                                        <input asp-for="Email" class="form-control" placeholder="Email">
                                        <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    </div>
                                    <span asp-validation-for="Email" style="color:red;margin-left:12px"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Password" class="form-control-label">Password</label>
                                    <div class="input-group">
                                        <input asp-for="Password" class="form-control" placeholder="Password">
                                        <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    </div>
                                    <span asp-validation-for="Password" style="color:red;margin-left:12px"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="CheckPassword" class="form-control-label">CheckPassword</label>
                                    <div class="input-group">
                                        <input asp-for="CheckPassword" class="form-control" placeholder="CheckPassword">
                                        <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    </div>
                                    <span asp-validation-for="CheckPassword" style="color:red;margin-left:12px"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="col-md-12">
                                    <label asp-for="DateOfBirth" class="form-control-label">DateOfBirth</label>
                                    <div class="input-group">
                                        <input asp-for="DateOfBirth" class="form-control" placeholder="DateOfBirth">
                                    </div>
                                    <span asp-validation-for="DateOfBirth" style="color:red;margin-left:12px"></span>
                                </div>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <label class="form-control-label">Subject</label>
                                        <select class="form-control" name="subjectId">
                                            @foreach (Subject item in ViewBag.Subject)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Address" class="form-control-label">Address</label>
                                    <div class="input-group">
                                        <input asp-for="Address" class="form-control" placeholder="Address">
                                        <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    </div>
                                    <span asp-validation-for="Address" style="color:red;margin-left:12px"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="PhoneNumber" class="form-control-label">Contact</label>
                                    <div class="input-group">
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Contact">
                                        <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    </div>
                                    <span asp-validation-for="PhoneNumber" style="color:red;margin-left:12px"></span>
                                </div>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <label asp-for="isMale" class="form-control-label">Gender</label>
                                        <select asp-for=isMale class="form-control" name="isMaleId">
                                            <option value="1">Male</option>
                                            <option value="0">Female</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="isMale" style="color:red;margin-left:12px"></span>
                                </div>
                                <div class="col-md-12" style="margin-top:10px">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}