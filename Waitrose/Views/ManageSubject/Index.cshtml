@model List<Subject>
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12" style="margin-top:30px">
                <div class="card">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <div>
                            <h5 class="card-header-text">Subjects</h5>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn rounded-pill btn-primary text-white" style="margin-right:10px">Create</a>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Teachers</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Subject item in Model)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>
                                                    @if (item.Teachers == null)
                                                    {
                                                        <span>N/A</span>
                                                    }
                                                    else
                                                    {
                                                        foreach (Teacher teacher in item.Teachers)
                                                        {
                                                            <span>@teacher.FullName</span>

                                                        }
                                                    }
                                                </td>

                                                <td style="text-align:end; gap:normal">
                                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn rounded-pill btn-primary text-white">Update</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
