@model CreateVM
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-7" style="margin-top:30px">
                <div class="card">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <h5 class="card-header-text">Create Employer</h5>
                    </div>
                    <div class="card-block">
                        <form method="post">
                            <div class="form-group row">
                                <label asp-for="Name" class="col-xs-2 col-form-label form-control-label">Name</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control">
                                    <span asp-validation-for="Name" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Surname" class="col-xs-2 col-form-label form-control-label">Surname</label>
                                <div class="col-sm-10">
                                    <input asp-for="Surname" class="form-control">
                                    <span asp-validation-for="Surname" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Username" class="col-xs-2 col-form-label form-control-label">Username</label>
                                <div class="col-sm-10">
                                    <input asp-for="Username" class="form-control">
                                    <span asp-validation-for="Username" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-xs-2 col-form-label form-control-label">Email</label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control">
                                    <span asp-validation-for="Email" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Salary" class="col-xs-2 col-form-label form-control-label">Salary</label>
                                <div class="col-sm-10">
                                    <input asp-for="Salary" class="form-control">
                                    <span asp-validation-for="Salary" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password" class="col-xs-2 col-form-label form-control-label">Password</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" class="form-control">
                                    <span asp-validation-for="Password" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CheckPassword" class="col-xs-2 col-form-label form-control-label">CheckPassword</label>
                                <div class="col-sm-10">
                                    <input asp-for="CheckPassword" class="form-control">
                                    <span asp-validation-for="CheckPassword" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-xs-2 col-form-label form-control-label">Roles</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="role">
                                        @foreach (string item in ViewBag.Roles)
                                        {
                                            <option value="@item">@item</option>
                                        }

                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>