@model ResetPasswordVM
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-7" style="margin-top:30px">
                <div class="card">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <h5 class="card-header-text">Reset @User.Identity.Name's Password</h5>
                    </div>
                    <div class="card-block">
                        <form method="post">
                            <div class="form-group row">
                                <label asp-for="Password" class="col-xs-2 col-form-label form-control-label">Password</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" class="form-control">
                                    <span asp-validation-for="Password" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CheckPassword" class="col-xs-2 col-form-label form-control-label">CheckPassword</label>
                                <div class="col-sm-10">
                                    <input asp-for="CheckPassword" class="form-control">
                                    <span asp-validation-for="CheckPassword" style="color:red; margin-left:10px"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>