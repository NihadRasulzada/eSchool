@model List<Student>
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12" style="margin-top:30px">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-text">List of Studens</h5>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>FullName</th>
                                            <th>Email</th>
                                            <th>Class</th>
                                            <th>Address</th>
                                            <th>Gender</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Student item in Model)
                                        {
                                            <tr>
                                                <td>@item.FullName</td>
                                                <td>@item.EmailAddress</td>
                                                <td>@item.Class.Name</td>
                                                <td>@item.Address</td>
                                                @if(item.isMale){
                                                    <td>Male</td>
                                                }
                                                else
                                                {
                                                    <td>Female</td>
                                                }
                                                <td>
                                                    <!-- Example single danger button -->
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            Action
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a asp-action="StudentProfile" asp-route-id="@item.Id" class="dropdown-item">View</a>
                                                            <a class="dropdown-item" href="#">Send Mail</a>
                                                            <div class="dropdown-divider"></div>
                                                            <a class="dropdown-item" href="#">Banned Student</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>